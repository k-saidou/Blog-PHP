                <td>{{ post.updateTime }}</td>
                <td>{{ post.id_user }}</td>
                <td>
                    <button class="btn" style="background-color: #1D8348"  ><a href="show/{{post.id}}">show</a></button>
                    <button class="btn" style="background-color: #21618C "><a href="update/{{post.id}}">edit</a></button>
                    <button class="btn" style="background-color: #E74C3C"><a href="delete/{{post.id}}">delete</a></button>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="new/">Create new</a>
{% endblock %}