{% extends 'default.html.twig' %}


{% block body %}

<br><br>
<br>
    <h1>Post index</h1>
<br>
    <div class="error">
        <div class="close" onclick="this.parentElement.remove()">X</div>
        {{error}}
    </div>                                        
    <div class="success">
        <div class="close" onclick="this.parentElement.remove()">X</div>
        {{message}}
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Chapo</th>
                <th>Contenu</th>
                <th>creation</th>
                <th>Modifié</th>
                <th>User</th>
                <th>Action</th>


            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre | u.truncate(20, '...', false) }}</td>
                <td>{{ post.chapo | u.truncate(20, '...', false) }}</td>
                <td>{{ post.contenu | u.truncate(20, '...', false) }}</td>
                <td>{{ post.creationTime | u.truncate(10, '', false)}}</td>
                <td>{{ post.updateTime | u.truncate(10, '', false)}}</td>
                <td>{{ post.id_user }}</td>
                <td>
                    <a class="btn btn-outline-success btn-sm" href="show/{{postd}}">Voir</a>
                    <a class="btn btn-outline-primary btn-sm" href="update/{{post.id}}">Modifier</a>
                    <a class="btn btn-outline-danger btn-sm" href="delete/{{post.id}}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr>
    <br>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a class="btn btn-outline-primary btn-sm" href="/posts/new">Créer un Post</a>
    </div>  
    <br>                                      
{% endblock %}