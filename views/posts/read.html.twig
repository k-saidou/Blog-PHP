{% extends 'default.html.twig' %}


{% block body %}

<br><br>
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Chapo</th>
                <th>Contenu</th>
                <th>creation</th>
                <th>Modifi√©</th>
                <th>Id</th>
                <th>Action</th>


            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre | u.truncate(25, '...', false) }}</td>
                <td>{{ post.chapo | u.truncate(25, '...', false) }}</td>
                <td>{{ post.contenu | u.truncate(25, '...', false) }}</td>
