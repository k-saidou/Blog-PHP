{% extends "default.html.twig" %}

{% block body %}
<!-- Page Header-->
<header class="masthead" style="background-image: url('http://localhost/blog-php/public/img/home-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>developpeur Web</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
                <br><br>                
                <div class="d-flex justify-content-center mb-4"><a class="btn btn-primary text-uppercase" href="https://drive.google.com/file/d/1UWFFYZ8_V7Vjv05tmf3UiYTwqLoo9WiP/view?usp=sharing" target=_blank >Télécharger mon CV</a></div>

            </div>
        </div>
    </div>
</header>

{% for post in posts %}
<div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
        <div class="col-md-10 col-lg-8 col-xl-7">
            <!-- Post preview-->
            <div class="post-preview">
                <a href="posts/show/{{post.id}}">
                <h2 class="post-title">{{ post.titre }}</h2>
                <h3 class="post-subtitle">Problems look mighty small from 150 miles up</h3>
                </a>
                <p class>{{ post.contenu |u.truncate(200, '...', false)}}</p>
                <p class="post-meta">
                    Posted by
                    <a href="#!">Start Bootstrap</a>
                    on September 24, 2022
                </p>
            </div>
            <!-- Divider-->
            <hr class="my-4" />
            <!-- Pager-->
        </div>
    </div>
</div>

{% endfor %}
<div class="d-flex justify-content-center mb-4"><a class="btn btn-primary text-uppercase" href="posts/index/">Voir tous les posts →</a></div>
{% endblock %}
