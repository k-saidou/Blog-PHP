{% extends 'default.html.twig' %}


{% block body %}

<br><br>
<br>
    <h1>User index</h1>
<br>
    <div class="error">
        <div class="close" onclick="this.parentElement.remove()">X</div>
        {{error}}
    </div>                                        
    <div class="success">
        <div class="close" onclick="this.parentElement.remove()">X</div>
        {{message}}
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Password</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.password | u.truncate(5, '...', true) }}</td>
                <td>{{ user.role }}</td>
                <td>
                    <a class="btn btn-outline-success btn-sm" href="show/{{user.id}}">Voir</a>
                    <a class="btn btn-outline-primary btn-sm" href="update/{{user.id}}">Modifier</a>
                    <a class="btn btn-outline-danger btn-sm" href="delete/{{user.id}}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="d-grid gap-2 col-6 mx-auto">
        <a class="btn btn-outline-success btn-sm" href="/users/new">Cr√©er un nouveau compte!</a>
    </div>  
    <br>                                      
{% endblock %}